<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:padding="15dp"
    android:background="@color/activityBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/card_moving_province"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:text="选择省份"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/card_moving_provinceName"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:text="选择市区"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/car_moving_city"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/search_bg"
            android:ellipsize="end"
            android:gravity="center"
            android:text="选择城市"
            android:textSize="12sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/car_moving_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入详细 区/街道"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/address_relationship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入联系人"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/address_relationship_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入联系人电话"
        android:textSize="12sp" />

    <Button
        android:id="@+id/car_moving_post"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_public_r"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>