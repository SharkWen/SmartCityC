<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ServiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/serve_frg_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:hint="请输入关键子搜素"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/serve_frg_sure"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/serve_frg_sh"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="生活服务"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/serve_frg_cz"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray1"
                android:gravity="center"
                android:textColor="@color/gray2"
                android:text="车主服务" />

            <TextView
                android:id="@+id/serve_frg_pm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray1"
                android:textColor="@color/gray2"
                android:gravity="center"
                android:text="便民服务" />
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <GridView
            android:id="@+id/serve_frg_gl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numColumns="4" />
    </LinearLayout>

</LinearLayout>