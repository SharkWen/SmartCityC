<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.LmPtFragment">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lm_name1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="神经外科"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lm_time1"
                android:layout_marginTop="10dp"
                android:text="2020-9-21 14:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:text="周一,下午"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/lm_btn1"
            android:text="预约"
            android:textColor="@color/white"
            android:background="@drawable/btn_public"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lm_name2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="神经外科"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lm_time2"
                android:layout_marginTop="10dp"
                android:text="2020-9-22 16:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:text="周二,下午"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/lm_btn2"
            android:text="预约"
            android:textColor="@color/white"
            android:background="@drawable/btn_public"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lm_name3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="神经外科"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lm_time3"
                android:layout_marginTop="10dp"
                android:text="2020-9-23  13:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:text="周三,下午"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/lm_btn3"
            android:text="预约"
            android:textColor="@color/white"
            android:background="@drawable/btn_public"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="25dp"/>
    </LinearLayout>
</LinearLayout>
