<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    android:orientation="vertical"
    tools:context=".CardFragment.CarMovingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="对方信息"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车   牌  号 :"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/car_moving_parkName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="请输入车牌号"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="本人信息"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="姓        名:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/car_moving_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="请输入姓名"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="手  机  号:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/car_moving_phone"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="身份证号:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/car_moving_cardId"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="请输入身份证号"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="挪车地址"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_moving_province"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/info_bg"
                android:gravity="center"
                android:text="选择省份"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_moving_provinceName"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/info_bg"
                android:gravity="center"
                android:text="选择市区"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/car_moving_city"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/info_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:text="选择城市"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/car_moving_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="请输入详细 区/街道"
            android:textSize="12sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginTop="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="37dp">

            <ImageView
                android:id="@+id/car_moving_upload"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/car_moving_upload" />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/car_moving_post"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_public"
            android:text="提交"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>