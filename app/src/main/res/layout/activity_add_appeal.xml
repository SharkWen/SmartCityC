<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/title_bar1"/>
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:text="标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <EditText
            android:id="@+id/add_appeal_title"
            android:background="@null"
            android:hint="这里写标题"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"/>
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:text="处理单位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <EditText
            android:id="@+id/add_appeal_danwei"
            android:background="@null"
            android:hint="这里写单位"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"/>
    <TextView
        android:textColor="#323232"
        android:textSize="18sp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        android:text="诉求内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/add_appeal_content"
        android:textColorHint="#800B4767"
        android:gravity="start"
        android:textSize="12sp"
        android:hint="这里写诉求内容"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:background="#97C7E1"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="0dp"/>
    <Button
        android:id="@+id/add_appeal_commit"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/btn_public"
        android:text="提交"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>